<div class="row my-1">
  <div class="col order-sm-1 order-2">
    <div class="card-columns">
      <% if current_user.eql? @user %>
        <div class="card card-inverse">
          <div class="card-body">
            <%= link_to 'Upload Photo', new_photo_url, class: 'btn btn-primary w-100' %>
          </div>
        </div>
      <% end %>
      <% @user.photos.each do |photo| %>
        <%= render 'photos/photo', photo: photo %>
      <% end %>
    </div>
  </div>
  <% if current_user.eql? @user %>
    <div class="col-sm-3 col-12 order-sm-2 order-1">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Albums</h4>
          <p class="card-text">Organize photos in albums.</p>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <a class="avatar mr-1" href="<%= new_user_album_url(current_user) %>">
                <%= image_tag '/images/photo.png' %>
              </a>
              <%= link_to 'Create a new album', new_user_album_url(current_user), class: 'card-title text-primary' %>
            </li>
            <% current_user.albums.each do |album| %>
              <%= render 'albums/list', user: current_user, album: album %>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>
  <div class="col-sm-3 col-12 order-sm-2 order-1">
    <%= render 'profile', user: @user %>
  </div>
</div>